@model _2024_2C_EstacionamientoORT.Models.Telefono

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Telefono</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CodArea" class="control-label"></label>
                <input asp-for="CodArea" class="form-control" />
                <span asp-validation-for="CodArea" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Principal" /> @Html.DisplayNameFor(model => model.Principal)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
@*                 Agrego html helpers para que me muestre los items de la clase enum
 *@                <select asp-for="Tipo" class="form-control" asp-items="@Html.GetEnumSelectList<TipoTelefono>()"></select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonaId" class="control-label"></label>
                <select asp-for="PersonaId" class ="form-control" asp-items="ViewBag.PersonaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
