@model _2024_2C_EstacionamientoORT.Models.Persona

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Dni)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Dni)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profesion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Profesion)
        </dd>
    </dl>
</div>
<div>
    <h4>@Html.DisplayNameFor(Model => Model.Direccion)</h4>
    @if (Model.Direccion != null)
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion.Calle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Direccion.Calle)
            </dd>
            
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion.CodPostal)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Direccion.CodPostal)
            </dd>

        </dl>
    }
    else
    {
        <h6>No hay dirección registrada</h6>
    }
</div>
<div>

    @if (Model.Telefonos != null && Model.Telefonos.Count != 0)
    {
        <h4>@Html.DisplayNameFor(Model => Model.Telefonos)</h4>

        foreach (Telefono telefono in Model.Telefonos)
        {
            <p>@telefono.NumeroCompleto</p>


        }

    }
    else
    {
        <h6>No hay Telefonos registrados</h6>
        <a asp-action="Create" asp-controller="Telefonos" class="btn btn-sm btn-info">Agregar Telefono</a>
    }
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
