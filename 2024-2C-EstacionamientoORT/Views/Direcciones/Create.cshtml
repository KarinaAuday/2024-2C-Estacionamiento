@model _2024_2C_EstacionamientoORT.Models.Direccion

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Direccion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Calle" class="control-label"></label>
                <input asp-for="Calle" class="form-control" />
                <span asp-validation-for="Calle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodPostal" class="control-label"></label>
                <input asp-for="CodPostal" class="form-control" />
                <span asp-validation-for="CodPostal" class="text-danger"></span>
            </div>
            @if (ViewBag.PersonaCrearId != null && ViewBag.PersonaCrearId > 0)
            {
                <p>Viene de Persona</p>
                <!-- Si PersonaId está presente, mostrar el nombre completo y un campo oculto -->
                <input type="hidden" asp-for="PersonaId" value="@ViewBag.PersonaCrearId" />
                <p>Creando dirección para: @ViewBag.PersonaNombreCompleto</p>
            }
            else
            {
                <p>NO Viene de Persona</p>
                <div class="form-group">
                    <label asp-for="PersonaId" class="control-label"></label>
                    <select asp-for="PersonaId" class="form-control" asp-items="ViewBag.PersonaId"></select>
                </div>
            }
           
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
